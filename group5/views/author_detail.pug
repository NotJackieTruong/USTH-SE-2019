extends layout

block title
  div(class='author_title')
    <img src="#{author.author_image}" class="rounded" alt="author-image">
    h1 Author: #{author.name}
    p #{author.lifespan}
    
block another_content
 

  div(class='author_background')
    p #{author.author_background}
  div(style='margin-left:20px;margin-top:20px')
  div(class='author_books')
    h4 Books
    dl
      each book in author_books
        dt 
          a(href=book.url) #{book.title}
        dd #{book.review}

      else
        p This author has no books.