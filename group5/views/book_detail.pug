extends layout
block title

  h1 #{book.title}
block content
  div(class='book_detail')
    div(class='book_detail_image')
      <img src="#{book.book_image}" class="rounded" alt="book-image">
    

    div(class='book_detail_info') 
  
      span #[strong Author:] 
        a(href=book.author.url) #{book.author.name}
      <a href=#{book.book_link} target="_blank"><input class="btn btn-outline-success my-2 my-sm-0" type="submit" value="Get A Copy" ></a>

      p #[strong Genre:]&nbsp;
        each val, index in book.genre
          a(href=val.url) #{val.name}
          if index < book.genre.length - 1
            |, 
      p #[strong Review:] #{book.review}
      
      
      div(style='margin-left:20px;margin-top:20px')
   
      